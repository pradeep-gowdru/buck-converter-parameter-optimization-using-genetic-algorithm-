    plt.title("GA Convergence for Buck Converter Optimization")
    plt.grid(True)
    plt.show()

    plt.figure(figsize=(10, 6))
    plt.plot(mutation_history)
    plt.xlabel("Generation")
    plt.ylabel("Mutation Rate")
    plt.title("Adaptive Mutation Schedule")
    plt.grid(True)
    plt.show()